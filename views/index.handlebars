<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>XALER</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {{> head-imports}}
</head>
<body>
{{> navbar}}
<div class="main-content">
  <!-- Carousel --> <!-- buggy when switching from mobile -> desktop -->
  <div id="xaler-carousel" class="carousel carousel-slider center" data-indicators="true">
    <a class="carousel-item" href="#"><img class="responsive-img" src="../images/corgi_friendler.png"></a>
    <a class="carousel-item" href="#"><img class="responsive-img" src="../images/corgi_friendler.png"></a>
    <a class="carousel-item" href="#"><img class="responsive-img" src="../images/corgi_friendler.png"></a>
    <a class="carousel-item" href="#"><img class="responsive-img" src="../images/corgi_friendler.png"></a>
  </div>
  <hr>

  <div class="container">
    <!-- XALER Grown -->
    <div class="row">
      <h2 class="display-text center" id="xaler-grown">XALER Grown</h2>
      {{#each grown}}
        <div class="col l3 m6 s12">
          <div class="card product" onclick="openProductModal({{{id}}})">
            <div class="card-image">
              <img class="responsive-img" src="images/skywalker-og.jpg" alt="itemImage">
            </div>
            <div class="card-content item-content">
              <h5 class="product-names-text">{{name}}</h5>
              <p class="{{type}} strains-text">{{type}}</p>
              <div class="item-quantity">
                {{#if eighth}}<span class="quantity measurements prices-text">{{eighth}}<br>{{eighthprice}}</span> {{/if}}
                {{#if fourth}}<span class="quantity measurements prices-text">{{fourth}}<br>{{fourthprice}}</span> {{/if}}
                {{#if half}} <span class="quantity measurements prices-text">{{half}}<br>{{halfprice}}</span> {{/if}}
                {{#if oz}} <span class="quantity measurements prices-text">{{oz}}<br>{{ozprice}}</span> {{/if}}
                {{#if two}} <span class="quantity measurements prices-text">{{two}}<br>{{twoprice}}</span> {{/if}}
                {{#if per}} <span class="quantity prices-text" id="per">{{per}}<br>{{price}}</span> {{/if}}
              </div>
            </div>
            <div class="card-action">
              <a class="add-cart-btn btn" href="#cart-modal">Add to Cart</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>

    <!-- Menu -->
    <div class="row">
      <h2 class="display-text center" id="menu">Menu</h2>
      {{#each menu}}
        <div class="col l3 m6 s12">
          <div class="card product" onclick="openProductModal({{{id}}})">
            <div class="card-image">
              <img class="responsive-img" src="images/skywalker-og.jpg" alt="itemImage">
            </div>
            <div class="card-content item-content">
              <h5 class="product-names-text">{{name}}</h5>
              <p class="{{type}} strains-text">{{type}}</p>
              <div class="item-quantity">
                {{#if eighth}}<span class="quantity measurements prices-text">{{eighth}}<br>{{eighthprice}}</span> {{/if}}
                {{#if fourth}}<span class="quantity measurements prices-text">{{fourth}}<br>{{fourthprice}}</span> {{/if}}
                {{#if half}} <span class="quantity measurements prices-text">{{half}}<br>{{halfprice}}</span> {{/if}}
                {{#if oz}} <span class="quantity measurements prices-text">{{oz}}<br>{{ozprice}}</span> {{/if}}
                {{#if two}} <span class="quantity measurements prices-text">{{two}}<br>{{twoprice}}</span> {{/if}}
                {{#if per}} <span class="quantity prices-text" id="per">{{per}}<br>{{price}}</span> {{/if}}
              </div>
            </div>
            <div class="card-action">
              <a class="add-cart-btn btn" href="#cart-modal">Add to Cart</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>

{{> product-modal}}
{{> cart-modal}}
{{> email-sub-modal}}
{{> delivery-area-modal}}
{{> contactus}}
{{> footer}}

{{> scripts}}
</body>
</html>