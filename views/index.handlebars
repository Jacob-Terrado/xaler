<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>XALER</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {{> head-imports}}
</head>
<body>
{{> navbar}}
<div class="main-content">
  <div class="carousel carousel-slider" data-indicators="true">
    <a class="carousel-item" href="#one!"><img src="../images/discounts.jpeg"></a>
    <a class="carousel-item" href="#one!"><img src="../images/discounts.jpeg"></a>
    <a class="carousel-item" href="#one!"><img src="../images/discounts.jpeg"></a>
    <a class="carousel-item" href="#one!"><img src="../images/discounts.jpeg"></a>
  </div>

  <div class="container" id="indexProduct">
    <h2 class="display-text center" id="menu">Menu</h2>
    {{#each menu}}
      <div class="row">
        <h3 id="{{type}}" class="menu-header-text center">{{type}}</h3>
        <h4 class="sub-header-text center">{{description}}</h4>
        {{#each item}}
          <div class="col l4 m8 s12">
            <!--<a class="opensModal" onclick="openProductModal(this)"></a>-->
            <div class="card product" onclick="openProductModal({{id}})">
              <div class="card-image">
                <img class="responsive-img" src="images/skywalker-og.jpg" alt="itemImage">
              </div>
              <div class="card-content item-content">
                <h5 class="product-names-text">{{name}}</h5>
                <p id="{{id}}-{{type}}" class="{{type}} strains-text">{{type}}</p>
                <div class="item-quantity">
                  {{#if eighth}}<span class="quantity measurements">{{eighth}}<br>{{eighthprice}}</span> {{/if}}
                  {{#if fourth}}<span class="quantity measurements">{{fourth}}<br>{{fourthprice}}</span> {{/if}}
                  {{#if half}} <span class="quantity measurements">{{half}}<br>{{halfprice}}</span> {{/if}}
                  {{#if oz}} <span class="quantity measurements">{{oz}}<br>{{ozprice}}</span> {{/if}}
                  {{#if one}} <span class="quantity measurements">{{one}}<br>{{oneprice}}</span> {{/if}}
                  {{#if two}} <span class="quantity measurements">{{two}}<br>{{twoprice}}</span> {{/if}}
                  {{#if per}} <span class="quantity" id="per">{{per}}<br>{{price}}</span> {{/if}}
                </div>
                <div class="card-action">
                  <a class="add-cart-btn btn" href="#cart-modal">Add to Cart</a>
                </div>
              </div>
            </div>
          </div>

        {{/each}}
      </div>
    {{/each}}
  </div>
</div>

{{> product-modal}}
{{> cart-modal}}
{{> email-sub-modal}}
{{> delivery-area-modal}}
{{> contactus}}
{{> footer}}

{{> scripts}}
</body>
</html>
